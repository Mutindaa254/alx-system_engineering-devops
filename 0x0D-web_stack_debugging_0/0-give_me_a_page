#!/usr/bin/env bash
# Script to start Apache and configure ServerName

# Check if running with root privileges
if [ "$(id -u)" -ne 0 ]; then
    echo "This script must be run with sudo or as root" 1>&2
    exit 1
fi

# Start Apache service
sudo service apache2 start

